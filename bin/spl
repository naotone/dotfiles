#!/bin/bash

. "$DOTPATH"/etc/lib/util.zsh

showRule() {
    api="https://spla2.yuu26.com/schedule"

    if [ $1 = "regular" ]; then
        rule_name=`ink256 46 レギュラーマッチ`
    elif [ $1 = "gachi" ]; then
        rule_name=`ink256 202 ガチマッチ`
    elif [ $1 = "league" ]; then
        rule_name=`ink256 201 リーグマッチ`
    else
        echo "Please specify a rule."
        exit 1
    fi

    if [ $2 = "now" ]; then
        index=0
    elif [ $2 = "next" ]; then
        index=1
    else
        index=0
    fi

    result=(`curl -sSfL $api | jq -r '.result.'$1'['$index'].rule, .result.'$1'['$index'].maps[]'`)


    echo $rule_name
    echo "========= ルール ========="
    echo "- ${result[0]}"
    echo "======== ステージ ========"
    echo "- ${result[1]}"
    echo "- ${result[2]}"
}

showAllRules() {
    if [ $# -ne 1 ]; then
        "Incorrect argument."
        exit 1
    fi

    showRule regular $1
    echo
    showRule gachi $1
    echo
    showRule league $1
}

if [ $# -lt 1 ]; then
    showAllRules now
    exit
fi

showRule $1 $2

